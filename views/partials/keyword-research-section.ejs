        <select id="select-location" class="form-control form-control-lg" >
            <option value="">Select Location</option>
            <option value="loc1">Amazing Apartments</option>
        </select>
    </div>
    <div class="col-sm text-center">
        <button type="button" class="btn btn-primary btn-lg btn-block">Generate Keywords/Phrases</button>
    </div>
</div>
