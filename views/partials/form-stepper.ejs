<h2 class="text-center">Step 3: Fill In Client Data</h2>

<div class="container stepper-container mt-5 mb-5 d-none">
  <form action="#" id="myForm" role="form" data-toggle="validator" method="post" accept-charset="utf=8">
    <div id="stepwizard">
        <ul>
          <li><a href="#name-address">Name / Adress Validation</a></li>
          <li><a href="#keyword-research">Keyword Research</a></li>
          <li><a href="#context">Context</a></li>
          <li><a href="#redirects">Redirects</a></li>
          <li><a href="#notes">Notes</a></li>
        </ul>
      <div>
        <div id="name-address">
          <h3 class="text-center">Validate Name / Address</h3>
          <div id="form-step-0" role="form" data-toggle="validator">
            <div class = "row">
              <div class="col">
                <div class="form-group text-left">
                  <label for="name">Name:</label>
                  <input type="text" class="form-control" name="name" id="name" required placeholder="Enter Location Brand Name">
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col">
                <div class="form-group text-left">
                  <label for="address">Address:</label>
                  <input type="text" class="form-control" name="address" id="address" required placeholder="Enter Location Address">
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col">
                <div class="form-group text-left">
                  <label for="city">City:</label>
                  <input type="text" class="form-control" name="city" id="city" required placeholder="Enter Location City">
                  <div class="help-block with-errors"></div>
                </div>
              </div>
            </div>
            <div class = "row">
              <div class="col">
                <div class="form-group text-left">
                  <label for="state">State:</label>
                  <input type="text" class="form-control" name="state" id="state" required placeholder="Enter Location State">
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col">
                <div class="form-group text-left">
                  <label for="zip">Zip:</label>
                  <input type="text" class="form-control" name="zip" id="zip" required placeholder="Enter Location State">
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col">
                <div class="form-group text-left">
                  <label for="country">Country:</label>
                  <input type="text" class="form-control" name="country" id="country" required placeholder="Enter Location State">
                  <div class="help-block with-errors"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div id="keyword-research">
          <% include keyword-research-section.ejs %>
        </div>
        <div id="context">

        </div>
        <div id="redirects">
          <% include redirects-section.ejs %>
        </div>
        <div id="notes">

        </div>
      </div>
    </div>
  </form>
</div>